<h2 class="page-title">Login</h2>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :login %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", class: 'fadeIn second' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'fadeIn third' %>
      </div>
      <div class="field">
        <%= link_to 'Esqueci minha senha', new_password_path(resource_name),
                    class: 'underlineHover forgot-password'%><br />
      </div>


      <div class="login-button">
        <%= f.submit "Entrar", class: 'fadeIn fourth' %>
      </div>

      <div id="formFooter">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "FaÃ§a seu cadastro", new_registration_path(resource_name) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%#= render "devise/shared/links" %>
