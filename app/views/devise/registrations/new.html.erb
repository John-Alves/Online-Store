<h2 class="page-title">Faça seu cadastro</h2>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name, class: 'fadeIn', required: true %>
      </div>

      <div class="field">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'fadeIn', required: true %>
      </div>

      <div class="field">
        <%= f.label :telephone, 'Telefone' %>
        <%= f.text_field :telephone, class: 'fadeIn telephone-mask', required: true %>
      </div>

      <div class="field">
        <%= f.label :cpf, 'CPF' %>
        <%= f.text_field :cpf, class: 'fadeIn cpf-mask' %>
      </div>

      <div class="field">
        <%= f.label :login %>
        <%= f.text_field :login, autofocus: true, autocomplete: "email", class: 'fadeIn', required: true %>
      </div>

      <div class="field">
        <%= f.label :password, "Senha (#{@minimum_password_length} caracteres)" %>
        <% if @minimum_password_length %>
          <em></em>
        <% end %>
        <br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'fadeIn', required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'Confirme sua Senha' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'fadeIn', required: true %>
      </div>

      <div class="login-button">
        <%= f.submit "Cadastrar", class: 'fadeIn' %>
      </div>

      <div id="formFooter">
        <%- if controller_name != 'sessions' %>
          <%= link_to "Ja possui cadastro? Faça o login", new_session_path(resource_name) %><br />
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%#= render "devise/shared/links" %>
