<% if product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: product, method:'post', url: url, local: true, class:'form-material') do |f| %>
          <%= hidden_field_tag :id, product.id %>

          <div class="row">
            <div class="form-group col-md-8">
              <%= f.label :title, "Titulo" %><br />
              <%= f.text_field :title, class: 'form-control form-control-line' %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-8">
              <%= f.label :description, "Descrição" %><br />
              <%= f.text_field :description, class: 'form-control form-control-line' %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-8">
              <%= f.label :comission, "Comissão" %><br />
              <%= f.text_field :comission, class: 'form-control form-control-line' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-8">
              <%= f.label :category_id, "Categoria" %><br />
              <% categories = @categories.map { |c| [c.description, c.id] } %>
              <%= f.select :category_id, categories, { include_blank: true  }, class: 'form-control form-control-line' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-8">
              <%= f.label :subcategory_id, "Subategoria" %><br />
              <% subcategories = @subcategories.map { |s| [s.description, s.id] } %>
              <%= f.select :subcategory_id, subcategories, { include_blank: true }, class: 'form-control form-control-line' %>
            </div>
          </div>

          <div class="form-group">
            <%= link_to 'Voltar', subcategories_path, class: 'btn btn-secondary waves-effect waves-light m-r-10' %>
            <%= button_tag "Salvar", class: 'btn btn-info waves-effect waves-light m-r-10' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

