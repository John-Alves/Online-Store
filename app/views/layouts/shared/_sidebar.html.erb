        <div class="text-center m-t-30">
          <%= link_to 'Sair', destroy_user_session_path, style:"width: 50%;",
                      class: 'btn waves-effect waves-light btn-danger hidden-md-down', 'aria-expanded': 'false' %>
        </div>
      </ul>
    </nav>
