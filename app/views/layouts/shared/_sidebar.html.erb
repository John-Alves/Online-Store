<aside class="left-sidebar">
  <div class="d-flex no-block nav-text-box align-items-center">
    <span>
      Bem vindo, <%= current_user.name %>
    </span>
    <a class="waves-effect waves-dark ml-auto hidden-sm-down" href="javascript:void(0)">
      <i class="fa fa-bars"></i>
    </a>
    <a class="nav-toggler waves-effect waves-dark ml-auto hidden-sm-up" href="javascript:void(0)">
      <i class="fa fa-bars fa-close"></i>
    </a>
  </div>
  <!-- Sidebar scroll-->
  <div class="scroll-sidebar">
    <!-- Sidebar navigation-->
    <nav class="sidebar-nav">
      <ul id="sidebarnav">
        <li>
          <%= link_to root_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
            <span class="hide-menu">Dashboard</span>
          <% end %>
        </li>
        <li>
          <%= link_to root_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
            <span class="hide-menu">Dashboard</span>
          <% end %>
        </li>
        <li>
          <a class="has-arrow waves-effect waves-dark active" href="javascript:void(0)" aria-expanded="false">
            <i class="icon-speedometer"></i>
            <span class="hide-menu">Estoque</span>
          </a>
          <ul aria-expanded="false" class="collapse in">
            <li>
              <%= link_to product_exits_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
                <span class="hide-menu">Saida de Produtos</span>
              <% end %>
            </li>
            <li>
              <%= link_to product_entries_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
                <span class="hide-menu">Entrada de Produtos</span>
              <% end %>
            </li>
            <li>
              <%= link_to products_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
                <span class="hide-menu">Produtos</span>
              <% end %>
            </li>
            <li>
              <%= link_to suppliers_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
                <span class="hide-menu">Fornecedores</span>
              <% end %>
            </li>
            <li>
              <%= link_to categories_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
                <span class="hide-menu">Categorias</span>
              <% end %>
            </li>
            <li>
              <%= link_to subcategories_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
                <span class="hide-menu">Subcategorias</span>
              <% end %>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to sellers_path, class: 'waves-effect waves-dark', 'aria-expanded': 'false' do %>
            <span class="hide-menu">Vendedores</span>
          <% end %>
        </li>
        <div class="text-center m-t-30">
          <%= link_to 'Sair', destroy_user_session_path, style:"width: 50%;",
                      class: 'btn waves-effect waves-light btn-danger', 'aria-expanded': 'false' %>
        </div>
      </ul>
    </nav>
    <!-- End Sidebar navigation -->
  </div>
  <!-- End Sidebar scroll-->
</aside>
<!-- ============================================================== -->
<!-- End Left Sidebar - style you can find in sidebar.scss  -->
